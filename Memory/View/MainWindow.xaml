                <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/Hanafuda_10-4.svg.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button Content="Button" HorizontalAlignment="Left" Margin="98,10,0,0" VerticalAlignment="Top" Width="44" Height="75"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="54,10,0,0" VerticalAlignment="Top" Width="44" Height="75"/>-->

    </Grid>
    
</Window>
